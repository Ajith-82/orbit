{
    "name": "chatbot-api",
    "private": false,
    "version": "0.1.0",
    "description": "API client for the Chatbot server",
    "type": "module",
    "main": "./dist/api.cjs",
    "module": "./dist/api.mjs",
    "types": "./dist/api.d.ts",
    "exports": {
        ".": {
            "import": "./dist/api.mjs",
            "require": "./dist/api.cjs",
            "types": "./dist/api.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "test": "vitest run",
        "test:watch": "vitest",
        "test-query": "node ./test/run-query.js"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.18.3",
        "node-fetch": "^3.3.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.9.1",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.24",
        "eslint": "^9.9.1",
        "globals": "^15.9.0",
        "msw": "^2.0.11",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.3.0",
        "vite": "^5.4.2",
        "vitest": "^0.34.6"
    },
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        },
        "react-dom": {
            "optional": true
        }
    }
}
